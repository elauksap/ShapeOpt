################################################################
##                     Configuration file                     ##
################################################################

################################################################
## General parameters.
################################################################

mesh = mesh/cantilever.msh

# The directory where output files will be saved,
# relative to the path where the executable is run from.
output_directory = Prove_DesignElement

# Elasticity
# StokesEnergy
problem = Elasticity

# BoundaryDisplacement
# FFD
# FFD_LS
# DesignElement
technique = DesignElement

################################################################
## Problem-related parameters.
################################################################
[Problem]
    # Elasticity
    lambda = 13.0
    mu     = 5.5
    
    # StokesEnergy
    ux = 4.0
    uy = 0.0
    
################################################################
## Technique-related parameters.
################################################################
[Technique]
    step              = 0.125
    #step              = 0.000125
    maxIterationsNo   = 80
    tolerance         = 1.0e-3
    volume_constraint = 1
    armijoSlope       = 0.0e-2
    
    boundingBoxSW = '0.0 0.0'
    boundingBoxNE = '5.0 4.0'
    #boundingBoxSW = '-0.5 -0.3'
    #boundingBoxNE = '1.0 0.3'
    
    [./FFD]
        subdivisionsX = 4
        subdivisionsY = 4
        
    [../FFD_LS]
        alpha = 0.99
        
    [../DesignElement]
        order = 3
        